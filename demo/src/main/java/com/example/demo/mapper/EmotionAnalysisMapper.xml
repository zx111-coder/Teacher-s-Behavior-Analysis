<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.EmotionAnalysisMapper">
    <insert id="insert" parameterType="com.example.demo.entity.EmotionAnalysis">
            INSERT INTO emotion_analysis (video_id, happy, sad, angry,
                                          surprise, neutral, fear, disgust, total)
            VALUES (#{videoId}, #{happy}, #{sad}, #{angry},
                    #{surprise}, #{neutral}, #{fear}, #{disgust}, #{total})
    </insert>

    <select id="findByVideoId" parameterType="java.lang.Long" resultType="com.example.demo.entity.EmotionAnalysis">
        SELECT * FROM emotion_analysis WHERE video_id = #{videoId}
    </select>
</mapper>